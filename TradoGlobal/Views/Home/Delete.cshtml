@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Form

<h2>Delete Record</h2>

<form asp-action="DeleteConfirmed">
    <div class="form-horizontal">
        <h4>Are you sure you want to delete this record?</h4>
        <hr />
        <div class="form-group">
            <input type="hidden" asp-for="Id" />

            <label asp-for="Name" class="control-label"></label>
            <input type="text" readonly asp-for="Name" class="form-control" />
            <span asp-for="Name" class="form-control" readonly="readonly"></span>
        </div>

        <div class="form-group">

            <label asp-for="Gender" class="control-label"></label>
            <input type="text" readonly asp-for="Gender" class="form-control" />
            <span asp-for="Gender" class="form-control" readonly="readonly"></span>
        </div>

        <div class="form-group">
            <label asp-for="Hobby" class="control-label"></label>
            <input type="text" readonly asp-for="Hobby" class="form-control" />
            <span asp-for="Hobby" class="form-control" readonly="readonly"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Privacy" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>


